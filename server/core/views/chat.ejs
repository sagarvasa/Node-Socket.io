    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<body>
    <%- include ('partials/header.ejs') %>

    <div class="rooms-w chat-container">
        <div class="row justify-content-center h-100 w-100">
            <div class="col-md-4 col-xl-3">
                <div class="card mb-sm-3 mb-md-0 users_card">
                    <div class="card-header">
                        <div class="input-group">
                            <input type="text" placeholder="Search Contacts..." name="" class="form-control search">
                            <div class="input-group-prepend">
                                <span class="input-group-text search_btn"><i class="fa fa-search"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body users_body">
                        <ui class="users">
                            <li class="active">
                                <div class="d-flex bd-highlight">
                                    <div class="img_cont">
                                        <img src="/images/user-icon.jpeg" class="rounded-circle user_img">
                                        <span class="online_icon"></span>
                                    </div>
                                    <div class="user_info">
                                        <span>Sagar</span>
                                        <p>Sagar is online</p>
                                    </div>
                                </div>
                            </li>
                            <li>
                                <div class="d-flex bd-highlight">
                                    <div class="img_cont">
                                        <img src="/images/user-icon.jpeg" class="rounded-circle user_img">
                                        <span class="online_icon offline"></span>
                                    </div>
                                    <div class="user_info">
                                        <span>Sagar 1</span>
                                        <p>Sagar 1 left 7 mins ago</p>
                                    </div>
                                </div>
                            </li>
                            <li>
